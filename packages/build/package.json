{
  "name": "@create-figma-plugin/build",
  "version": "1.2.1",
  "publishConfig": {
    "access": "public"
  },
  "description": "Build a Figma plugin",
  "keywords": [
    "create-figma-plugin",
    "figma",
    "figma-plugin",
    "figma-plugins"
  ],
  "license": "MIT",
  "author": "Yuan Qing Lim",
  "repository": {
    "type": "git",
    "url": "git://github.com/yuanqing/create-figma-plugin.git",
    "directory": "packages/build"
  },
  "type": "module",
  "engines": {
    "node": ">=14"
  },
  "files": [
    "lib"
  ],
  "bin": {
    "build-figma-plugin": "lib/cli.js"
  },
  "scripts": {
    "build": "yarn run clean && tsc --build",
    "clean": "rm -rf '*.log' lib tsconfig.tsbuildinfo",
    "fix": "eslint --fix '{src,test}/**/*.ts' && prettier --loglevel error --write '*.json' 'src/**/*.json' 'test/fixtures/**/*.json'",
    "lint": "eslint '{src,test}/**/*.ts'",
    "test": "yarn run build && ava 'test/**/*.ts'"
  },
  "dependencies": {
    "@create-figma-plugin/common": "^1.2.1",
    "chokidar": "^3.5.2",
    "cssnano": "^5.0.6",
    "esbuild": "^0.12.9",
    "find-up": "^5.0.0",
    "fs-extra": "^10.0.0",
    "globby": "^11.0.4",
    "indent-string": "^5.0.0",
    "kleur": "^4.1.4",
    "postcss": "^8.3.5",
    "postcss-modules": "^4.1.3",
    "rev-hash": "^3.0.0",
    "sade": "^1.7.4",
    "temp-write": "^5.0.0",
    "tempy": "^1.0.1",
    "typed-css-modules": "^0.7.0"
  },
  "devDependencies": {
    "@create-figma-plugin/tsconfig": "^1.2.1",
    "@create-figma-plugin/utilities": "^1.2.1",
    "@figma/plugin-typings": "^1",
    "@types/fs-extra": "^9.0.11",
    "@types/node": "^15.12.4",
    "@types/rimraf": "^3.0.0",
    "@types/sade": "^1.7.2",
    "ava": "^3.15.0",
    "eslint": "^7.29.0",
    "eslint-config-yuanqing": "^0.0.5",
    "preact": "^10.5.13",
    "prettier": "^2.3.1",
    "rimraf": "^3.0.2",
    "ts-node": "^10.0.0",
    "typescript": "^4.2.4"
  },
  "peerDependencies": {
    "@figma/plugin-typings": "^1",
    "typescript": "^4"
  },
  "ava": {
    "extensions": {
      "ts": "module"
    },
    "nodeArguments": [
      "--loader",
      "ts-node/esm"
    ],
    "nonSemVerExperiments": {
      "configurableModuleFormat": true
    },
    "serial": true,
    "timeout": "2m"
  },
  "eslintConfig": {
    "extends": "eslint-config-yuanqing"
  },
  "prettier": "eslint-config-yuanqing/prettier"
}
